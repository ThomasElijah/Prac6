BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '0'
            size_hint_x: None
            width: 200
            on_text: app.check_valid()
            on_text: app.calculate_km(int(input_number.text))
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(int(input_number.text), 1)
                on_press: app.calculate_km(int(input_number.text))
            Button:
                text: 'Down'
                on_press: app.handle_increment(int(input_number.text), -1)
                on_press: app.calculate_km(int(input_number.text))
#    Button:
