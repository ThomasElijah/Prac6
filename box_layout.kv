BoxLayout:
    orientation: 'vertical'
#    orientation: 'horizontal'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Clear'
            on_press: app.handle_clear()
            size_hint_x: None
            width: 75
        TextInput:
            id: input_name
            text: ''
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Greet'
            on_press: app.handle_greet()
            size_hint_x: None
            width: 75
        Label:
            text: 'Enter your name'
            color: (1, 1, 0, 1)
            id: output_label
